{
    "name": "webexmachina/contao-smartgear",
    "description": "SMARTGEAR for Contao Open Source CMS",
    "keywords": ["smartgear", "webexmachina", "bundle", "contao"],
    "type": "contao-bundle",
    "license": "LGPL-3.0+",
    "website": "https://www.webexmachina.fr/",
    "authors": [
    {
        "name": "Web ex Machina",
        "homepage": "https://www.webexmachina.fr",
        "role": "Developer"
    }],
    "support":
    {
        "issues": "https://github.com/webexmachina/contao-smartgear/issues",
        "source": "https://github.com/webexmachina/contao-smartgear"
    },
    "require":
    {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "~4.13",
        "contao/news-bundle": "^4.13",
        "contao/calendar-bundle": "^4.13",
        "contao/faq-bundle": "^4.13",
        "contao/comments-bundle": "^4.13",
        "contao/newsletter-bundle": "^4.13",
        "contao/listing-bundle": "^4.13",
        "madeyourday/contao-rocksolid-custom-elements": "^2.3",
        "heimrichhannot/contao-backend-lost-password-bundle": "^1.5",
        "marcel-mathias-nolte/contao-filesmanager-fileusage": "^1.0",
        "do-while/contao-backupdb-bundle": "^1.4",
        "numero2/contao-opengraph3": "^4.2",
        "terminal42/notification_center": "^1.6",
        "heimseiten/contao-sticky-footer-backend-bundle": "^1.0",
        "heimrichhannot/contao-email2username-bundle": "^1.4",
        "webexmachina/contao-utils": "^1.0 || ^2.0",
        "webexmachina/contao-grid": "^1.0",
        "webexmachina/contao-component-style-manager": "^2.6",
        "webexmachina/contao-personal-data-manager": "^1.0"
    },
    "require-dev":
    {
        "phpunit/phpunit": "^9.0",
        "codeception/codeception": "^4",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-webdriver": "^2.0",
        "contao/test-case":"~4"
    },
    "autoload":
    {
        "psr-4":
        {
            "WEM\\SmartgearBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "extra":
    {
        "contao-manager-plugin": "WEM\\SmartgearBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "composer/package-versions-deprecated": true,
            "contao-community-alliance/composer-plugin": true,
            "php-http/discovery": true
        }
    }
}
