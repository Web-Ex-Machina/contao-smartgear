{
    "name": "webexmachina/contao-smartgear",
    "description": "SMARTGEAR for Contao Open Source CMS",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": ["smartgear", "webexmachina", "bundle", "contao"],
    "type": "contao-bundle",
    "license": "LGPL-3.0+",
    "website": "https://www.webexmachina.fr/",
    "authors": [
    {
        "name": "Web ex Machina",
        "homepage": "https://www.webexmachina.fr",
        "role": "Developer"
    }],
    "support":
    {
        "issues": "https://github.com/webexmachina/contao-smartgear/issues",
        "source": "https://github.com/webexmachina/contao-smartgear"
    },
    "require":
    {
        "php": "^8.2",
        "contao/core-bundle": "^5.3",
        "contao/news-bundle": "^5.3",
        "contao/calendar-bundle": "^5.3",
        "contao/faq-bundle": "^5.3",
        "contao/comments-bundle": "^5.3",
        "contao/newsletter-bundle": "^5.3",
        "contao/listing-bundle": "^5.3",
        "madeyourday/contao-rocksolid-custom-elements": "^2.3",
        "heimrichhannot/contao-backend-lost-password-bundle": "^1.5",
        "marcel-mathias-nolte/contao-filesmanager-fileusage": "^1.0",
        "numero2/contao-opengraph3": "^4.2",
        "terminal42/notification_center": "^2.0",
        "heimseiten/contao-sticky-footer-backend-bundle": "^1.1",
        "heimrichhannot/contao-email2username-bundle": "^1.5",
        "webexmachina/contao-utils": "2.*",
        "webexmachina/contao-grid": "dev-php-8-2-preparation",
        "oveleon/contao-component-style-manager": "^3.5",
        "webexmachina/contao-form-data-manager": "dev-main",
        "webexmachina/contao-personal-data-manager": "dev-php-8-2-preparation",
        "ext-curl": "*"
    },
    "require-dev":
    {
        "rector/rector": "^1.0",
        "phpunit/phpunit": "^10.0",
        "codeception/codeception": "^5",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-asserts": "^3.0",
        "codeception/module-webdriver": "^4.0",
        "contao/test-case":"~4",
        "contao/contao-rector": "dev-main"
    },
    "autoload":
    {
        "psr-4":
        {
            "WEM\\SmartgearBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "extra":
    {
        "contao-manager-plugin": "WEM\\SmartgearBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "composer/package-versions-deprecated": true,
            "contao-community-alliance/composer-plugin": true,
            "php-http/discovery": true
        }
    }
}
